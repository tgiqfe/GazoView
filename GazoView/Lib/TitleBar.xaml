<UserControl x:Class="GazoView.Lib.TitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GazoView.Lib"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="Label">
            <Setter Property="FontFamily" Value="Meiryo UI" />
            <Setter Property="Foreground" Value="#003D00" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Padding" Value="0"/>
        </Style>
    </UserControl.Resources>
    
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0"
               Background="Beige"
               Opacity="0.60"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <Label Content="[" Margin="5 0 1 0"/>
            <Label Content="{Binding Images.Current.FileName}" />
            <Label Content="]" Margin="1 0 3 0"/>
            <Label Content="{Binding Images.Current.FilePath}" Margin="0 0 5 0" />
        </StackPanel>

    </Grid>
</UserControl>
