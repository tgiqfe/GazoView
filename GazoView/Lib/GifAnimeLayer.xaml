<UserControl x:Class="GazoView.Lib.GifAnimeLayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GazoView.Lib"
             xmlns:gif="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
             mc:Ignorable="d"
             Name="GifAnimation"
             Background="White"
             IsVisibleChanged="GifAnimation_IsVisibleChanged">
    <Grid>
        <Image Name="ImageAnime"
               gif:AnimationBehavior.RepeatBehavior="Forever"
               gif:AnimationBehavior.CacheFramesInMemory="True" />
    </Grid>
</UserControl>
